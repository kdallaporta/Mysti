{
  "name": "mysti",
  "displayName": "Mysti - AI Coding Assistant",
  "description": "A powerful AI coding assistant interface supporting multiple AI backends including Claude Code CLI",
  "version": "0.1.0",
  "publisher": "mysti",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Programming Languages",
    "Machine Learning",
    "Other"
  ],
  "keywords": [
    "ai",
    "assistant",
    "claude",
    "coding",
    "copilot"
  ],
  "license": "BUSL-1.1",
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mysti-sidebar",
          "title": "Mysti",
          "icon": "resources/Mysti-Logo.png"
        }
      ]
    },
    "views": {
      "mysti-sidebar": [
        {
          "type": "webview",
          "id": "mysti.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "mysti.openChat",
        "title": "Open Mysti Chat",
        "category": "Mysti"
      },
      {
        "command": "mysti.newConversation",
        "title": "New Conversation",
        "category": "Mysti"
      },
      {
        "command": "mysti.addToContext",
        "title": "Add to Mysti Context",
        "category": "Mysti"
      },
      {
        "command": "mysti.clearContext",
        "title": "Clear Context",
        "category": "Mysti"
      },
      {
        "command": "mysti.openInNewTab",
        "title": "Open Mysti in New Tab",
        "category": "Mysti",
        "icon": {
          "light": "resources/Mysti-Logo.png",
          "dark": "resources/Mysti-Logo.png"
        }
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mysti.addToContext",
          "group": "mysti"
        }
      ],
      "editor/context": [
        {
          "command": "mysti.addToContext",
          "group": "mysti"
        }
      ],
      "view/title": [
        {
          "command": "mysti.openInNewTab",
          "when": "view == mysti.chatView",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "mysti.openInNewTab",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Mysti",
      "properties": {
        "mysti.defaultProvider": {
          "type": "string",
          "default": "claude-code",
          "enum": [
            "claude-code",
            "openai-codex"
          ],
          "enumDescriptions": [
            "Claude Code CLI (Anthropic)",
            "OpenAI Codex CLI"
          ],
          "description": "Default AI provider to use"
        },
        "mysti.claudeCodePath": {
          "type": "string",
          "default": "claude",
          "description": "Path to Claude Code CLI executable"
        },
        "mysti.codexPath": {
          "type": "string",
          "default": "codex",
          "description": "Path to OpenAI Codex CLI executable"
        },
        "mysti.defaultMode": {
          "type": "string",
          "default": "ask-before-edit",
          "enum": [
            "ask-before-edit",
            "edit-automatically",
            "plan"
          ],
          "description": "Default operation mode"
        },
        "mysti.defaultThinkingLevel": {
          "type": "string",
          "default": "medium",
          "enum": [
            "none",
            "low",
            "medium",
            "high"
          ],
          "description": "Default thinking level for AI responses"
        },
        "mysti.defaultModel": {
          "type": "string",
          "default": "claude-sonnet-4-5-20250929",
          "description": "Default model to use"
        },
        "mysti.accessLevel": {
          "type": "string",
          "default": "ask-permission",
          "enum": [
            "read-only",
            "ask-permission",
            "full-access"
          ],
          "description": "Default access level for file operations"
        },
        "mysti.autoContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically include relevant context"
        },
        "mysti.brainstorm.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable brainstorm mode for multi-agent collaboration"
        },
        "mysti.brainstorm.discussionMode": {
          "type": "string",
          "default": "quick",
          "enum": [
            "quick",
            "full"
          ],
          "enumDescriptions": [
            "Direct synthesis - faster, agents don't explicitly discuss",
            "Full discussion - agents review and comment on each other's responses"
          ],
          "description": "How agents interact before synthesis in brainstorm mode"
        },
        "mysti.brainstorm.discussionRounds": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 3,
          "description": "Number of discussion rounds in full mode"
        },
        "mysti.brainstorm.synthesisAgent": {
          "type": "string",
          "default": "claude-code",
          "enum": [
            "claude-code",
            "openai-codex"
          ],
          "description": "Agent to use for synthesis in brainstorm mode"
        },
        "mysti.agents.claudePersona": {
          "type": "string",
          "default": "neutral",
          "enum": [
            "neutral",
            "architect",
            "pragmatist",
            "engineer",
            "reviewer",
            "designer",
            "custom"
          ],
          "enumDescriptions": [
            "No additional framing",
            "Focus on system design and patterns",
            "Focus on practical implementation",
            "Focus on technical correctness and performance",
            "Focus on code quality and issues",
            "Focus on API design and UX",
            "Use custom prompt"
          ],
          "description": "Persona for Claude agent in brainstorm mode"
        },
        "mysti.agents.claudeCustomPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom persona prompt for Claude (when persona is 'custom')"
        },
        "mysti.agents.codexPersona": {
          "type": "string",
          "default": "neutral",
          "enum": [
            "neutral",
            "architect",
            "pragmatist",
            "engineer",
            "reviewer",
            "designer",
            "custom"
          ],
          "enumDescriptions": [
            "No additional framing",
            "Focus on system design and patterns",
            "Focus on practical implementation",
            "Focus on technical correctness and performance",
            "Focus on code quality and issues",
            "Focus on API design and UX",
            "Use custom prompt"
          ],
          "description": "Persona for Codex agent in brainstorm mode"
        },
        "mysti.agents.codexCustomPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom persona prompt for Codex (when persona is 'custom')"
        },
        "mysti.permission.timeout": {
          "type": "number",
          "default": 30,
          "minimum": 0,
          "description": "Seconds to wait for permission approval (0 = no timeout, requires explicit action)"
        },
        "mysti.permission.timeoutBehavior": {
          "type": "string",
          "default": "auto-reject",
          "enum": [
            "auto-accept",
            "auto-reject",
            "require-action"
          ],
          "enumDescriptions": [
            "Automatically approve the action when timeout expires",
            "Automatically deny the action when timeout expires",
            "No timeout - require explicit user action"
          ],
          "description": "Behavior when permission request times out"
        }
      }
    },
    "keybindings": [
      {
        "command": "mysti.openChat",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "mysti.openInNewTab",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "marked": "^15.0.0",
    "prismjs": "^1.29.0",
    "uuid": "^9.0.1"
  }
}
