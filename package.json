{
  "name": "mysti",
  "displayName": "Mysti - AI Coding Agent",
  "description": "Multi-agent AI coding assistant. Claude Code, Codex, and Gemini brainstorm together, debate approaches, and deliver superior solutions. Like Cursor & Copilot, but with collaborative AI agents.",
  "version": "0.2.0",
  "publisher": "DeepMyst",
  "author": {
    "name": "Baha Abunojaim",
    "email": "baha@deepmyst.com",
    "url": "https://deepmyst.com"
  },
  "icon": "resources/Mysti-Logo.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/DeepMyst/Mysti"
  },
  "bugs": {
    "url": "https://github.com/DeepMyst/Mysti/issues"
  },
  "homepage": "https://deepmyst.com",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "AI",
    "Programming Languages",
    "Machine Learning",
    "Chat"
  ],
  "keywords": [
    "ai",
    "claude",
    "claude code",
    "copilot",
    "cursor",
    "gpt",
    "codex",
    "gemini",
    "ai agent",
    "ai chat",
    "code assistant",
    "pair programming",
    "anthropic",
    "openai",
    "google",
    "multi-agent",
    "brainstorm"
  ],
  "license": "BUSL-1.1",
  "activationEvents": [
    "onStartupFinished",
    "workspaceContains:claude.md",
    "workspaceContains:CLAUDE.md",
    "workspaceContains:gemini.yaml",
    "workspaceContains:codex.json",
    "workspaceContains:agents.yaml",
    "workspaceContains:.mysti/config.json",
    "workspaceContains:.mysti/agents.yaml",
    "workspaceContains:.claude/**",
    "workspaceContains:.gemini/**",
    "workspaceContains:.openai/**"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "mysti-sidebar",
          "title": "Mysti",
          "icon": "resources/Mysti-Logo.png"
        }
      ]
    },
    "views": {
      "mysti-sidebar": [
        {
          "type": "webview",
          "id": "mysti.chatView",
          "name": "Chat"
        }
      ]
    },
    "commands": [
      {
        "command": "mysti.openChat",
        "title": "Open Chat",
        "shortTitle": "Chat",
        "category": "Mysti"
      },
      {
        "command": "mysti.newConversation",
        "title": "New Conversation",
        "shortTitle": "New",
        "category": "Mysti"
      },
      {
        "command": "mysti.addToContext",
        "title": "Add to Context",
        "shortTitle": "Add Context",
        "category": "Mysti"
      },
      {
        "command": "mysti.clearContext",
        "title": "Clear Context",
        "category": "Mysti"
      },
      {
        "command": "mysti.openInNewTab",
        "title": "Open in Editor Tab",
        "shortTitle": "New Tab",
        "category": "Mysti",
        "icon": {
          "light": "resources/Mysti-Logo.png",
          "dark": "resources/Mysti-Logo.png"
        }
      },
      {
        "command": "mysti.debugSetup",
        "title": "Debug: Test Setup Flow",
        "category": "Mysti"
      },
      {
        "command": "mysti.debugSetupFailure",
        "title": "Debug: Test Setup Failure",
        "category": "Mysti"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "mysti.addToContext",
          "group": "mysti"
        }
      ],
      "editor/context": [
        {
          "command": "mysti.addToContext",
          "group": "mysti"
        }
      ],
      "view/title": [
        {
          "command": "mysti.openInNewTab",
          "when": "view == mysti.chatView",
          "group": "navigation"
        }
      ],
      "editor/title": [
        {
          "command": "mysti.openInNewTab",
          "group": "navigation"
        }
      ]
    },
    "configuration": {
      "title": "Mysti",
      "properties": {
        "mysti.defaultProvider": {
          "type": "string",
          "default": "claude-code",
          "enum": [
            "claude-code",
            "openai-codex",
            "google-gemini"
          ],
          "enumDescriptions": [
            "Claude Code CLI (Anthropic) - Deep reasoning, complex refactoring, thorough analysis",
            "OpenAI Codex CLI - Quick iterations, familiar GPT style, rapid prototyping",
            "Google Gemini CLI - Fast responses, Google ecosystem integration"
          ],
          "description": "Primary AI provider for coding assistance. Switch providers anytime without losing context."
        },
        "mysti.claudeCodePath": {
          "type": "string",
          "default": "claude",
          "description": "Path to Claude Code CLI executable"
        },
        "mysti.codexPath": {
          "type": "string",
          "default": "codex",
          "description": "Path to OpenAI Codex CLI executable"
        },
        "mysti.geminiPath": {
          "type": "string",
          "default": "gemini",
          "description": "Path to Google Gemini CLI executable"
        },
        "mysti.defaultMode": {
          "type": "string",
          "default": "ask-before-edit",
          "enum": [
            "ask-before-edit",
            "edit-automatically",
            "plan"
          ],
          "description": "Default operation mode"
        },
        "mysti.defaultThinkingLevel": {
          "type": "string",
          "default": "medium",
          "enum": [
            "none",
            "low",
            "medium",
            "high"
          ],
          "description": "Default thinking level for AI responses"
        },
        "mysti.defaultModel": {
          "type": "string",
          "default": "claude-sonnet-4-5-20250929",
          "description": "Default model to use"
        },
        "mysti.accessLevel": {
          "type": "string",
          "default": "ask-permission",
          "enum": [
            "read-only",
            "ask-permission",
            "full-access"
          ],
          "enumDescriptions": [
            "AI can only read files, never modify - safest option for exploring codebases",
            "AI asks before each file change - balanced control and productivity",
            "AI can edit files autonomously - maximum speed for trusted tasks"
          ],
          "description": "Control what the AI can do with your files. Choose based on your trust level and task requirements."
        },
        "mysti.autoContext": {
          "type": "boolean",
          "default": true,
          "description": "Automatically include open files and selections as context for better AI responses"
        },
        "mysti.brainstorm.enabled": {
          "type": "boolean",
          "default": false,
          "description": "Enable multi-agent brainstorm mode where two AI providers collaborate, debate, and synthesize solutions"
        },
        "mysti.brainstorm.discussionMode": {
          "type": "string",
          "default": "quick",
          "enum": [
            "quick",
            "full"
          ],
          "enumDescriptions": [
            "Direct synthesis - faster, agents don't explicitly discuss",
            "Full discussion - agents review and comment on each other's responses"
          ],
          "description": "How agents interact before synthesis in brainstorm mode"
        },
        "mysti.brainstorm.discussionRounds": {
          "type": "number",
          "default": 1,
          "minimum": 1,
          "maximum": 3,
          "description": "Number of discussion rounds in full mode"
        },
        "mysti.brainstorm.synthesisAgent": {
          "type": "string",
          "default": "claude-code",
          "enum": [
            "claude-code",
            "openai-codex",
            "google-gemini"
          ],
          "description": "Agent to use for synthesis in brainstorm mode"
        },
        "mysti.brainstorm.agents": {
          "type": "array",
          "default": ["claude-code", "openai-codex"],
          "items": {
            "type": "string",
            "enum": ["claude-code", "openai-codex", "google-gemini"]
          },
          "minItems": 2,
          "maxItems": 2,
          "uniqueItems": true,
          "description": "Select any 2 of 3 AI providers to collaborate in brainstorm mode. Different combinations offer unique strengths."
        },
        "mysti.agents.claudePersona": {
          "type": "string",
          "default": "neutral",
          "enum": [
            "neutral",
            "architect",
            "pragmatist",
            "engineer",
            "reviewer",
            "designer",
            "custom"
          ],
          "enumDescriptions": [
            "No additional framing",
            "Focus on system design and patterns",
            "Focus on practical implementation",
            "Focus on technical correctness and performance",
            "Focus on code quality and issues",
            "Focus on API design and UX",
            "Use custom prompt"
          ],
          "description": "Persona for Claude agent in brainstorm mode"
        },
        "mysti.agents.claudeCustomPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom persona prompt for Claude (when persona is 'custom')"
        },
        "mysti.agents.codexPersona": {
          "type": "string",
          "default": "neutral",
          "enum": [
            "neutral",
            "architect",
            "pragmatist",
            "engineer",
            "reviewer",
            "designer",
            "custom"
          ],
          "enumDescriptions": [
            "No additional framing",
            "Focus on system design and patterns",
            "Focus on practical implementation",
            "Focus on technical correctness and performance",
            "Focus on code quality and issues",
            "Focus on API design and UX",
            "Use custom prompt"
          ],
          "description": "Persona for Codex agent in brainstorm mode"
        },
        "mysti.agents.codexCustomPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom persona prompt for Codex (when persona is 'custom')"
        },
        "mysti.agents.geminiPersona": {
          "type": "string",
          "default": "neutral",
          "enum": [
            "neutral",
            "architect",
            "pragmatist",
            "engineer",
            "reviewer",
            "designer",
            "custom"
          ],
          "enumDescriptions": [
            "No additional framing",
            "Focus on system design and patterns",
            "Focus on practical implementation",
            "Focus on technical correctness and performance",
            "Focus on code quality and issues",
            "Focus on API design and UX",
            "Use custom prompt"
          ],
          "description": "Persona for Gemini agent in brainstorm mode"
        },
        "mysti.agents.geminiCustomPrompt": {
          "type": "string",
          "default": "",
          "description": "Custom persona prompt for Gemini (when persona is 'custom')"
        },
        "mysti.agents.autoSuggest": {
          "type": "boolean",
          "default": true,
          "description": "Smart persona suggestions: Mysti analyzes your message and recommends the best persona (Architect, Debugger, etc.) for your task"
        },
        "mysti.agents.maxTokenBudget": {
          "type": "number",
          "default": 0,
          "minimum": 0,
          "maximum": 16000,
          "description": "Limit tokens used for agent context. Set to 0 for unlimited (default). Use lower values to reduce API costs."
        },
        "mysti.permission.timeout": {
          "type": "number",
          "default": 30,
          "minimum": 0,
          "description": "Seconds to wait for permission approval (0 = no timeout, requires explicit action)"
        },
        "mysti.permission.timeoutBehavior": {
          "type": "string",
          "default": "auto-reject",
          "enum": [
            "auto-accept",
            "auto-reject",
            "require-action"
          ],
          "enumDescriptions": [
            "Automatically approve the action when timeout expires",
            "Automatically deny the action when timeout expires",
            "No timeout - require explicit user action"
          ],
          "description": "Behavior when permission request times out"
        }
      }
    },
    "keybindings": [
      {
        "command": "mysti.openChat",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m"
      },
      {
        "command": "mysti.openInNewTab",
        "key": "ctrl+shift+n",
        "mac": "cmd+shift+n"
      }
    ],
    "languages": [
      {
        "id": "claude-prompt",
        "extensions": [".claude.md"],
        "aliases": ["Claude Prompt", "Claude MD"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "prompt-markdown",
        "extensions": [".prompt.md"],
        "aliases": ["Prompt Markdown", "Prompt MD"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "gpt-prompt",
        "extensions": [".gpt.md"],
        "aliases": ["GPT Prompt", "GPT MD"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "gemini-prompt",
        "extensions": [".gemini.md"],
        "aliases": ["Gemini Prompt", "Gemini MD"],
        "configuration": "./language-configuration.json"
      },
      {
        "id": "codex-prompt",
        "extensions": [".codex.md"],
        "aliases": ["Codex Prompt", "Codex MD"],
        "configuration": "./language-configuration.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "webpack --mode production",
    "watch": "webpack --mode development --watch",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "sync-agents": "node scripts/sync-agents.js",
    "sync-agents:force": "node scripts/sync-agents.js --force"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.85.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "eslint": "^8.54.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.3.2",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@vscode/extension-telemetry": "^0.9.0",
    "marked": "^15.0.0",
    "prismjs": "^1.29.0",
    "uuid": "^9.0.1"
  }
}
